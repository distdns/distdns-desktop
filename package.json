{
  "name": "opennic-desktop",
  "version": "0.2.0",
  "description": "Quickly set your desktop to use DNS servers from OpenNic projet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "electron-mocha ./tests --timeout 10000 --full-trace",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "./node_modules/.bin/electron-builder build -mwl --x64",
    "release": "./node_modules/.bin/electron-builder build -p always"
  },
  "build": {
    "publish": "github",
    "appId": "org.opennic.opennic-app",
    "mac": {
      "icon": "assets/images/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "assets/images/iconset",
      "category": "Network",
      "synopsis": "DNS from OpenNic projet",
      "target": [
        "deb",
        "rpm"
      ]
    },
    "win": {
      "icon": "assets/images/icon.ico",
      "target": "NSIS"
    }
  },
  "keywords": [
    "dns",
    "opennic",
    "app",
    "desktop"
  ],
  "author": "wil <wil@lesspheres.fr>",
  "homepage": "https://github.com/mandrag0ra/opennic-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/mandrag0ra/opennic-desktop"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "electron": "^2.0.3",
    "electron-builder": "^20.15.1",
    "electron-mocha": "^6.0.2",
    "electron-updater": "^2.21.10"
  },
  "dependencies": {
    "electron-log": "^2.2.11",
    "electron-store": "2.0.0",
    "es6-promisify": "^6.0.0",
    "package.json": "^2.0.1",
    "sudo-prompt": "^8.1.0",
    "util.promisify": "^1.0.0",
    "validator": "^10.2.0"
  },
  "devEngines": {
    "node": ">=8.x"
  }
}
